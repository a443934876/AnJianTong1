<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/item_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- <TextView -->
            <!-- android:id="@+id/gwpy_fwdw" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_margin="5dp" -->
            <!-- android:focusable="true" -->
            <!-- android:focusableInTouchMode="true" -->
            <!-- android:gravity="center" -->
            <!-- android:text="" -->
            <!-- android:textColor="#FF0000" -->
            <!-- android:textSize="24sp" /> -->


            <!-- <TextView -->
            <!-- android:id="@+id/gwpy_wh" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_margin="5dp" -->
            <!-- android:focusable="true" -->
            <!-- android:focusableInTouchMode="true" -->
            <!-- android:gravity="center" -->
            <!-- android:text="" -->
            <!-- android:textColor="#000000" -->
            <!-- android:textSize="16sp" /> -->


            <!-- <View -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="1.5dp" -->
            <!-- android:background="#FF0000" /> -->

            <TextView
                android:id="@+id/gwpy_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#007FFF"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布时间："
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/gwpy_fbsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已经有"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/gwpy_cyrs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人已查阅"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/gwpy_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000" />

            <LinearLayout
                android:id="@+id/gwpy_fjwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/gwpy_fjbg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/gwpy_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/gwpy_comname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/gwpy_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:text=""
                android:textColor="#000000" />

            <LinearLayout
                android:id="@+id/gone_ln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/login_bg2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="审核：" />

                <EditText
                    android:id="@+id/gwpy_pyedt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shop_cate_refresh_btn"
                    android:gravity="left|top"
                    android:lines="6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="下一个审核：" />

                    <Spinner
                        android:id="@+id/sh_xygsh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/gwsh_qxfb"
                        style="@style/CustomCheckboxTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   取消发布" />
                </LinearLayout>

                <Button
                    android:id="@+id/gwpy_commit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:layout_marginTop="20dip"
                    android:background="@color/login_bg"
                    android:onClick="commit_gw"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="提　　交"
                    android:textColor="#FFFFFF"
                    android:textSize="30px" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>